@model Mikro.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Tags";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>#@ViewBag.TagName</h2>
@if (Model.Following == null)
{
    <a href="@Url.Action("Follow", "Following", new {tag = @Model.Tag.Name})">Follow Tag</a>
}
else
{
    <a href="@Url.Action("Follow", "Following", new {tag = @Model.Tag.Name})">Unfollow Tag</a>
}
@ViewBag.Name
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("DisplayTagContent", "Tag"))
    {
        <div class="form-group">
            @Html.TextAreaFor(m => m.Content, 5, 900, new { @placeholder = "Enter text here" })
            <div>
                <button type="submit" class="btn btn-primary">Wyslij</button>
            </div>
        </div>
    }
}

@Html.Partial("~/Views/Shared/_DisplayPostsPartial.cshtml")
