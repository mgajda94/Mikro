@model Mikro.ViewModels.TagViewModel

@{
    ViewBag.Title = "Tags";
    Layout = "~/Views/Home/_DisplayingPostsPartial.cshtml";
}

<h2>#@ViewBag.tagId</h2>
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("DisplayTagContent", "Tag"))
    {
        <div class="form-group">
            @Html.TextAreaFor(m => m.Content, 5, 900, new { @placeholder = "Enter text here" })
            <div>
                <button type="submit" class="btn btn-primary">Wyslij</button>
            </div>
        </div>
    }
}
@Html.Partial("_DisplayingPostsPartial")
