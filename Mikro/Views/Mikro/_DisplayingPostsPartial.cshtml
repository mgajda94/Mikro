@model Mikro.ViewModels.PostFormViewModel

@foreach(var post in Model.Posts)
{
    <div class="panel panel-info">
        <div class="panel-heading">
            @post.PostedOn.ToString("MMM d yyyy") | Added by <b>@post.Username</b>  
            @if (post.UserId == @ViewBag.actualUserId)
            {
                  <a href="@Url.Action("EditPost", "Mikro", new { id = post.Id })">Edit Post</a>
                  <a href="@Url.Action("Delete", "Mikro", new { id = post.Id})">Delete Post</a>
            }
            <a href="@Url.Action("PlusPost", "Mikro", new { id = post.Id })">@Model.PlusUsers.Count()</a>
        </div>
        <div class="panel-body">
            @Html.Raw(post.Content.Replace(Environment.NewLine, "<br/>"))
        </div>
        <ul class="list-group">
            <li class="list-group-item">
                <a href="@Url.Action("Post", "Mikro", new { id = post.Id})">Add coment</a>
            </li>
        </ul>
    </div>
}
