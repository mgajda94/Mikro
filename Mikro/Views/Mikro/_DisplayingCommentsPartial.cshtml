@model Mikro.ViewModels.CommentFormViewModel
@{
    ViewBag.Title = "_DisplayingCommentsPartial";
}

@foreach (var comment in Model.Comments)
{
    <div class="panel panel-info">
        <div class="panel-heading">
            @comment.PostedOn.ToString("MMM d yyyy") | Added by <b>@comment.UserName</b>
        </div>
        <div class="panel-body">@Html.Raw(comment.Content.Replace(Environment.NewLine, "<br/>"))</div>
    </div>
}

