@model Mikro.ViewModels.CommentFormViewModel
@{
    ViewBag.Title = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Post</h2>


@foreach (var post in Model.Posts)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            @post.PostedOn.ToString("MMM d yyyy"), Added by <b> @post.Username </b>
        </div>
        <div class="panel-body">@post.Content</div>
    </div>
}
@Html.Partial("_DisplayingCommentsPartial")

@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Post", "Mikro"))
    {
        <div class="form-group">
            @Html.EditorFor(m => m.Content, new { @class = "form-control" })
            <button type="submit" class="btn btn-primary">Wyslij</button>
        </div>
    }
}